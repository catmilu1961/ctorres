<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mantenimiento_view_list">
            <field name="name">garaje.mantenimiento.list</field>
            <field name="model">garaje.mantenimiento</field>
            <field name="arch" type="xml">
                <tree string="Lista de Vehiculos">
                    <field name="fecha"/>
                    <field name="tipo"/>
                    <field name="coste"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mantenimiento_view_form">
            <field name="name">garaje.mantenimiento.form</field>
            <field name="model">garaje.mantenimiento</field>
            <field name="arch" type="xml">
                <form string="Datos de Vehiculos">
                    <sheet>
                        <group>
                            <group>
                                <field name="fecha"/>
                                <field name="tipo"/>
                                <field name="coste"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="mantenimiento_view_search">
            <field name="name">garaje.mantenimiento.search</field>
            <field name="model">garaje.mantenimiento</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tipo"/>
                </search>
            </field>
        </record>
        
    </data>
</odoo>